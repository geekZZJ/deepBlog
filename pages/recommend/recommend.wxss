/* pages/recommend/recommend.wxss */

@import "../template/blog-item/blog-item-template.wxss"
.recommend {
  display: flex;
  flex-direction: column;
}

.recommend-nav {
  display: flex;
  flex-direction: row;
  /*background-color: rgb(0, 144, 240);*/
  background-color: #b3d4db;
  height: 100rpx;
  justify-content: space-between;
}

.recommend-nav-title {
  display: flex;
  flex-direction: row;
  width: 60%;
  justify-content: space-around;
  line-height: 100rpx;
  color: #000;
  font-size: 30rpx;
  font-weight: 600;
}

.recomend-nav-title-selected {
  color: #fff;
}

.recommend-nav-change {
  line-height: 100rpx;
  font-size: 26rpx;
  margin-right: 20rpx;
  color: #fff;
}

/*icon样式*/

@font-face {
  font-family: 'iconfont';
  src: url(data:font/truetype;charset=utf-8;base64,) format('truetype');
  font-weight: normal;
  font-style: normal;
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.iconweibiaoti--:before {
  content: "\e612";
}
