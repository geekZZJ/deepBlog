<!--pages/textarea/textarea.wxml-->
<view>
  <view class="title">签名</view>
  <view class="tip">最多30字符</view>
  <view class="textarea-wrap">
    <textarea bindinput="bindTextArea" value="{{content}}" placeholder="请输入你的签名..." maxlength="{{maxlength}}" />
  </view>
  <view class="save" catchtap="save">保存</view>
</view>