.blog-container{
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    padding-bottom: 8px;
    background-color: #fff;
    border-bottom: 1px solid #ededed;
}

.blog-title{
    font-size: 30rpx;
    color: #333;
    font-weight: 600;
    margin-left: 10px;
    word-break: break-all;
}

.blog-abstract{
    font-size: 26rpx;
    color: #666;
    margin: 5px 10px 5px 10px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.blog-other{
    margin: 0 10px 0 10px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.blog-heat{
    color: red;
    font-size: 20rpx;
    border: 1px solid #666;
    padding: 3rpx;
    border-radius: 4px;
}

/*icon样式*/
@font-face {
    font-family: 'iconfont';
    src: url(data:font/truetype;charset=utf-8;base64,) format('truetype');
    font-weight: normal;
    font-style: normal;
}

.iconfont {
    font-family: "iconfont" !important;
    font-size: 16px;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

.iconpinglun:before {
    content: "\e63a";
}

.iconbuoumaotubiao44:before {
    content: "\e630";
}

.blog-like{
    color: #999;
    display: flex;
    flex-direction: row;
    align-items: flex-end;
}

.blog-collection{
    font-size: 24rpx !important;
    margin-right: 40rpx;
}

.blog-collection1{
    color: #333;
    font-size: 24rpx !important;
    margin-right: 40rpx;
}

.blog-comments{
    font-size: 22rpx !important;
    margin-right: 10rpx;
}